CHECK PROCESS automount WITH PIDFILE /var/run/autofs-running
start program = "/etc/init.d/autofs start"
stop program = "/etc/init.d/autofs stop"
IF 5 RESTARTS WITHIN 5 CYCLES THEN timeout


<% @mounts.each do |mount| -%>
CHECK DIRECTORY <%= mount.sub(/^\//, '') %> path <%= mount %>
  IF DOES NOT EXIST THEN exec "/usr/bin/stat <%= mount %>/"
  IF 5 RESTARTS WITHIN 5 CYCLES THEN timeout

<% end -%>